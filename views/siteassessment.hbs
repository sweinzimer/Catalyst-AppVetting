<div class="row">
  <div class="col-xs-12">
    <h5>Site Assessments</h5>
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-md-6">
        <div class="card card-inverse card-primary">
          <div class="card-block">
            <h3 class="card-title">Pending</h3>
          </div>
        </div>
        {{#each site}}
          <a href="/site/{{_id}}">
            <div class="card card-inverse card-primary">
              <div class="card-block">
                <div class="card-title">
                  <h3>{{application.name.first}} {{application.name.last}}</h3>
                </div>
                <div class="card-subtitle">
                  <strong>Address:</strong><br/>
                  {{application.address.line_1}}<br/>
                  {{#if_not_eq application.address.line_2 ''}}
                    {{application.address.line_2}}<br/>
                  {{/if_not_eq}}
                  {{application.address.city}}, {{application.address.state}} {{application.address.state}}<br/>
                </div>
              </div>
            </div>
          </a>
        {{/each}}
      </div>
      <div class="col-xs-12 col-sm-8 col-md-6">
        <div class="card">
          <div class="card-block">
            <h3 class="card-title">Complete</h3>
          </div>
        </div>
        {{#each complete}}
          <a href="/site/{{_id}}">
            <div class="card">
              <div class="card-block">
                <div class="card-title">
                  <h3>{{application.name.first}} {{application.name.last}}</h3>
                </div>
                <div class="card-subtitle text-muted">
                  <strong>Address:</strong><br/>
                  {{application.address.line_1}}<br/>
                  {{#if_not_eq application.address.line_2 ''}}
                    {{application.address.line_2}}<br/>
                  {{/if_not_eq}}
                  {{application.address.city}}, {{application.address.state}} {{application.address.state}}<br/>
                </div>
              </div>
            </div>
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
