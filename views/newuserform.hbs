<link rel="stylesheet" type="text/css" href="/stylesheets/formStyle.css">
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">

<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/css/bootstrap-select.min.css">


<h1>Registration</h1>

<div class="row">
  <div class="col-xs-12 col-sm-8">
    <p>Register yourself so Catalyst may contact you. In the future, we may allow
      document uploads, application status checks, and other features. For now, staff
      members may register to access internal documents.</p>
  </div>
</div>

<div class="row">
  <form id="userRegistration">
    <div class="col-xs-12 col-sm-8">
      <div class="row">
        <div class="col-xs-12 form_errors">
        </div>
      </div>

      <div class="form-group row">
        <label for="email" class="form-control-label col-xs-12">Email*</label>
        <div class="col-xs-12">
          <input type="email" class="form-control" name="contact_info.user_email" id="email" />
        </div>
      </div>

      <div class="form-group row">
        <label for="password" class="form-control-label col-xs-12">Password*</label>
        <div class="col-xs-6">
          <input type="password" class="form-control" name="password" id="password" />
        </div>
        <div class="col-xs-6">
          <input type="password" class="form-control" name="password-confirm" id="password" placeholder="Confirm password"/>
        </div>
      </div>



      <hr />

      <div class="form-group">
        <div class="row">
          <label for="userNameFirst" class="form-control-label col-xs-12">Name</label>
        </div>
        <div class="row">
          <div class="col-xs-6 col-md-4">
            <input type="text" class="form-control" name="contact_info.user_name.user_first" id="userNameFirst" placeholder="First name*"/>
          </div>
          <div class="col-xs-6 col-md-4">
            <input type="text" class="form-control" name="contact_info.user_name.user_middle" id="userNameFirst" placeholder="Middle name"/>
          </div>
          <div class="col-xs-12 col-md-4">
            <input type="text" class="form-control" name="contact_info.user_name.user_last" id="userNameFirst" placeholder="Last name*"/>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-xs-12">
          <input type="text" class="form-control" name="contact_info.user_name.user_preferred" id="userNameFirst" placeholder="Preferred name"/>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-xs-12">
          <label for="birthday" class="form-control-label">Birthday</label>
        </div>
        <div class="col-xs-12 col-sm-8">
          <input type="date" class="form-control" name="contact_info.user_dob.dob_date" id="birthday" />
        </div>
      </div>

      <hr />

      <div class="row form-group">
        <label for="address1" class="form-control-label col-xs-12 col-sm-2">Address</label>
        <div class="col-xs-12">
          <input type="text" class="form-control" name="contact_info.user_address.u_line1" id="address1" placeholder="Address 1"/>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-xs-12">
          <input type="text" class="form-control" name="contact_info.user_address.u_line2" id="address2" placeholder="Address 2"/>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-xs-12 col-sm-5">
          <input type="text" class="form-control" name="contact_info.user_address.u_city" id="city" placeholder="City"/>
        </div>
        <div class="col-xs-12 col-sm-4">
          <input type="text" class="form-control" name="contact_info.user_address.u_state" id="state" placeholder="State"/>
        </div>
        <div class="col-xs-12 col-sm-3">
          <input type="text" class="form-control" name="contact_info.user_address.u_zip" id="zip" placeholder="Zip"/>
        </div>
      </div>

      <hr />

      <div class="row form-group">
        <label for="userEmergency" class="form-control-label col-xs-12">Emergency contact</label>
        <div class="col-xs-12">
          <input type="text" class="form-control" name="contact_info.user_emergency.uec_name" id="userEmergency" placeholder="Emergency contact name"/>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-xs-6">
          <input type="text" class="form-control" name="contact_info.user_emergency.uec_relationship" id="address2" placeholder="Relationship"/>
        </div>
        <div class="col-xs-6">
          <input type="text" class="form-control" name="contact_info.user_emergency.uec_phone" id="city" placeholder="Phone number"/>
        </div>
      </div>

      <hr />


      <div class="row form-group">
        <div class="col-xs-12 col-sm-6">
          <div class="row">
            <div class="col-xs-12">
              <label for="userStatus" class="form-control-label">User status</label>
            </div>
            <div class="col-xs-12">
              <select class="form-control" name="user_status" id="userStatus">
                <option value="ACTIVE">Active</option>
                <option value="DISABLED">Disabled</option>
              </select>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div class="row">
            <div class="col-xs-12">
              <label for="idDate" class="form-control-label">ID Date</label>
            </div>
            <div class="col-xs-12">
              <input type="date" class="form-control" id="idDate" name="user_documents.ID_Date" />
            </div>
          </div>
        </div>
      </div>

      <hr />

      <div class="row form-group">
        <div class="col-xs-12">
          <label class="form-control-label">Documents</label>
        </div>
        <div class="col-xs-12 col-sm-6">
          <label>
            <input type="checkbox" name="user_documents.waiver_signed" />
            Waiver signed
          </label>
        </div>
        <div class="col-xs-12 col-sm-6">
          <label>
            <input type="checkbox" name="user_documents.background_check" />
            Background check
          </label>
        </div>
        <div class="col-xs-12 col-sm-6">
          <label>
            <input type="checkbox" name="user_documents.ID_badge" />
            ID Badge
          </label>
        </div>
      </div>

      <hr/>

      <div class="form-group row">
        <div class="col-xs-12 col-sm-5">
          <button type="submit" class="btn btn-default btn-block">Register</button>
        </div>
      </div>

    </div>
    <div class="col-xs-12 col-sm-4">      
           
     <dt class="col-xs-4">Roles</dt>
      <dd class="col-xs-8">
        <select class="selectpicker showtick" id="user_roles" title="{{user.user_roles}}" multiple>
          <option value="VET">Vetting Agent</option>
          <option value="SITE">Site Assement</option>
          <option value="PROJECT_MANAGEMENT">Project Managment</option>
          <option value="ADMIN">Admin</option>          
        </select>
      </dd>
          
      
      </div>
    </div>
  </form>
</div>

<script type="text/javascript" src="/javascript/newUserForm.js"></script>
